{
  "compilerOptions": {
    "outDir": "./app/static/dist",
    "rootDir": "./app/static", // Update the rootDir to include the directory where intermediate.tsx is located
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
  },
  "include": [
    // "app/static/scripts/**/*.ts",
    "app/static/**/*.tsx",
    ".eslintrc.cjs",
    "tailwind.config.js", // Add this line to include the Tailwind config file
    "webpack.config.js" // Add this line to include the Webpack config file
  ],
  "exclude": [
    "node_modules"
  ]
}